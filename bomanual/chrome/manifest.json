{
  "name": "Block-o-Manual",
  "version": "0.0.9",
  "browser_action": {
    "default_icon": "images/on.png",
    "default_title": "Segmenting this page"
  },
  "background": {
	"scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "exclude_matches": ["*://*.lip6.fr/*"],
      "css": ["css/pmanual.css"],
      "js": ["js/pmanual.js"]
    }
  ],
  "permissions": [
    "tabs", 
    "*://*/*", "background"
  ],
  "manifest_version": 2

}
